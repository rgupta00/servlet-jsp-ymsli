<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>demo1</display-name>
  <welcome-file-list>
    <welcome-file>cal.html</welcome-file>
  </welcome-file-list>
  
  
    
  <!-- -servlet mapping for Counter servlet -->
  
  <servlet>
    <servlet-name>foo</servlet-name>
    <servlet-class>com.calapp.controller.CounterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>foo</servlet-name>
    <url-pattern>/counter</url-pattern>
  </servlet-mapping>
  
  
    
  <!-- -servlet mapping for Cal servlet -->
  <servlet>
    <servlet-name>CalController</servlet-name>
    <servlet-class>com.calapp.controller.CalController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalController</servlet-name>
    <url-pattern>/cal</url-pattern>
  </servlet-mapping>
  
  
  
  <!-- -servlet mapping for Hello servlet -->
  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>com.calapp.controller.Hello</servlet-class>
    <init-param>
    	<param-name>driverName</param-name>
    	<param-value>com.mysql.jdbc.Driver</param-value>
    </init-param>
     
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/Hello</url-pattern>
  </servlet-mapping>
  
  <!-- -for whole application -->
  <!-- parameters are k:v both should be string, they are fixed at run ... -->
  <context-param>
    	<param-name>adminName</param-name>
    	<param-value>rajeev</param-value>
  </context-param>
  
    <context-param>
    	<param-name>clientName</param-name>
    	<param-value>YMSLI</param-value>
  </context-param>
</web-app>




